<%= form_for @task, method: @method, url: @path do |form| %>

  <%= form.label :title %>
  <br />
  <%= form.text_field :title %>

  <br />

  <%= form.label :description %>
  <br />
  <%= form.text_area :description, size: "30x30" %>

  <br />

  <%= form.label :complete %>
  <br />
  <%= form.check_box :complete %>

  <br />

  <%= form.submit %>
<% end  %>
